{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "removeComments": false,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "outDir": "lib",
        "noUnusedLocals": false, // 关闭以声明但未取值报错
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "baseUrl": ".",
        "rootDir": ".",
        "jsx": "preserve",
        "allowJs": false, // 不允许我们在 TypeScript 项目中导入 JavaScript 文件
        "checkJs": false, // 禁用 TypeScript 项目中 JavaScript 文件的所有错误报告
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },

    "include": [
        "./src",
        "./types",
        "components.d.ts"
    ],
    
    "compileOnSave": false
}